<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PlanShare.App.Views.Components.Inputs.EntryAndLabelPasswordComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:myComponent="clr-namespace:PlanShare.App.Views.Components.Inputs"
    xmlns:resourceFile="clr-namespace:PlanShare.App.Resources"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:DataType="myComponent:EntryAndLabelPasswordComponent">
    <VerticalStackLayout>
        <Label Style="{StaticResource TitleForEntry}" Text="{Binding Title}" />

        <Grid ColumnDefinitions="*, 40">
            <Entry
                x:Name="EntryPassword"
                IsPassword="True"
                Keyboard="Password"
                Placeholder="{Static resourceFile:ResourceTexts.PLACEHOLDER_PASSWORD_MIN_6_CHARACTERS}" />

            <VerticalStackLayout
                Grid.Column="1"
                Padding="0,12"
                VerticalOptions="Center"
                WidthRequest="40">
                <VerticalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer Tapped="ShowHidePassword" />
                </VerticalStackLayout.GestureRecognizers>

                <Image x:Name="ImageEye" Source="icon_eye_hidden.png">
                    <Image.Behaviors>
                        <toolkit:IconTintColorBehavior TintColor="{AppThemeBinding Light={StaticResource PRIMARY_COLOR_LIGHT}, Dark={StaticResource PRIMARY_COLOR_DARK}}" />
                    </Image.Behaviors>
                </Image>
            </VerticalStackLayout>
        </Grid>
    </VerticalStackLayout>
</ContentView>
