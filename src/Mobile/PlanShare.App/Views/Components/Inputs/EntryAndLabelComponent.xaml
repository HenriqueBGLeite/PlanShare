<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PlanShare.App.Views.Components.Inputs.EntryAndLabelComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:myComponent="clr-namespace:PlanShare.App.Views.Components.Inputs"
    x:DataType="myComponent:EntryAndLabelComponent">
    <VerticalStackLayout>
        <Label Style="{StaticResource TitleForEntry}" Text="{Binding Title}" />

        <Entry Keyboard="{Binding Keyboard}" Placeholder="{Binding Placeholder}" />
    </VerticalStackLayout>
</ContentView>
