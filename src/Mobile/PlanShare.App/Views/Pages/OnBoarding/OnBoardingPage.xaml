<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PlanShare.App.Views.Pages.OnBoarding.OnBoardingPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:fontFamily="clr-namespace:PlanShare.App.Constants"
    xmlns:viewModel="clr-namespace:PlanShare.App.ViewModels.Pages.OnBoarding"
    x:DataType="viewModel:OnBoardingViewModel"
    Shell.NavBarIsVisible="False">
    <VerticalStackLayout>
        <Image Source="hero_image.png" />

        <Label
            Margin="0,30,0,40"
            FontFamily="{Static fontFamily:FontFamily.MAIN_FONT_BLACK}"
            FontSize="18"
            HorizontalOptions="Center"
            Text="Tarefas pequenas, grandes resultados." />

        <Button
            BackgroundColor="#F6F6FB"
            Command="{Binding LoginWithGoogleCommand}"
            CornerRadius="20"
            HeightRequest="60"
            ImageSource="google_logo.png"
            Text="Continuar com o Google"
            TextColor="Black" />

        <Button
            Margin="0,20,0,40"
            Command="{Binding LoginWithEmailAndPasswordCommand}"
            CornerRadius="20"
            HeightRequest="60"
            Text="Login com Email e senha" />

        <VerticalStackLayout Padding="0,6,0,0" HeightRequest="40">
            <VerticalStackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding RegisterUserAccountCommand}" />
            </VerticalStackLayout.GestureRecognizers>
            <Label FontSize="18" HorizontalOptions="Center">
                <Label.FormattedText>
                    <FormattedString>
                        <Span FontFamily="{Static fontFamily:FontFamily.SECONDARY_FONT_REGULAR}" Text="NÃ£o tem uma conta?" />
                        <Span Text=" " />
                        <Span
                            FontAttributes="Bold"
                            FontFamily="{Static fontFamily:FontFamily.SECONDARY_FONT_BLACK}"
                            Text="Cria a sua conta!"
                            TextColor="#0065F2" />
                    </FormattedString>
                </Label.FormattedText>
            </Label>
        </VerticalStackLayout>
    </VerticalStackLayout>
</ContentPage>