<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="PlanShare.App.Views.Pages.Login.DoLogin.DoLoginPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:animationComponent="clr-namespace:PlanShare.App.Views.Components.StatusPage"
    xmlns:fontFamily="clr-namespace:PlanShare.App.Constants"
    xmlns:inputsComponent="clr-namespace:PlanShare.App.Views.Components.Inputs"
    xmlns:models="clr-namespace:PlanShare.App.Models"
    xmlns:resourceFile="clr-namespace:PlanShare.App.Resources"
    xmlns:viewModel="clr-namespace:PlanShare.App.ViewModels.Pages.Login.DoLogin"
    x:DataType="viewModel:DoLoginViewModel">
    <Grid>
        <VerticalStackLayout IsVisible="False" Spacing="30">
            <VerticalStackLayout.Triggers>
                <DataTrigger
                    Binding="{Binding StatusPage}"
                    TargetType="VerticalStackLayout"
                    Value="{Static models:StatusPage.Default}">
                    <Setter Property="IsVisible" Value="True" />
                </DataTrigger>
            </VerticalStackLayout.Triggers>

            <Label
                Margin="0,0,0,10"
                Style="{StaticResource PageTitle}"
                Text="{Static resourceFile:ResourceTexts.LABEL_TITLE_LOGIN}" />

            <inputsComponent:EntryAndLabelComponent
                Title="{Static resourceFile:ResourceTexts.LABEL_EMAIL}"
                Keyboard="Email"
                Placeholder="bruce@waynetech.com"
                TextValue="{Binding Model.Email}" />

            <inputsComponent:EntryAndLabelPasswordComponent Title="{Static resourceFile:ResourceTexts.LABEL_PASSWORD}" TextValue="{Binding Model.Password}" />

            <VerticalStackLayout
                Margin="0,10,0,40"
                Padding="0,6,0,0"
                HeightRequest="40">
                <Label
                    FontFamily="{Static fontFamily:FontFamily.MAIN_FONT_BLACK}"
                    HorizontalOptions="End"
                    Text="{Static resourceFile:ResourceTexts.LINK_FORGOT_PASSWORD}"
                    TextDecorations="Underline" />
            </VerticalStackLayout>

            <Button Command="{Binding DoLoginCommand}" Text="{Static resourceFile:ResourceTexts.BUTTON_LOGIN}" />
        </VerticalStackLayout>

        <animationComponent:AnimationSendInformationComponent IsVisible="False">
            <animationComponent:AnimationSendInformationComponent.Triggers>
                <DataTrigger
                    Binding="{Binding StatusPage}"
                    TargetType="animationComponent:AnimationSendInformationComponent"
                    Value="{Static models:StatusPage.Sending}">
                    <Setter Property="IsVisible" Value="True" />
                </DataTrigger>
            </animationComponent:AnimationSendInformationComponent.Triggers>
        </animationComponent:AnimationSendInformationComponent>
    </Grid>
</ContentPage>